  padding: 20rpx;
}
.cour_name{
  font-size: 20px;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.cour_dis text{
  display: inline-block;
  margin-right: 20rpx;
  font-size: 30rpx;
  color: #666;
  margin-bottom: 10rpx;
}
